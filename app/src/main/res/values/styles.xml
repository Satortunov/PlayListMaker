<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/size_dp_16</item>
        <item name="android:background">@color/blue</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_sp_26</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginBottom">@dimen/size_dp_16</item>
    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/size_sp_26</item>
        <item name="cornerRadius">@dimen/size_dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_dp_10</item>
        <item name="iconTint">@color/black_text</item>
    </style>


</resources>