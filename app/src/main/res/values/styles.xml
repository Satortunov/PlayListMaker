<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_dp_48</item>
        <item name="android:textSize">@dimen/size_sp_26</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginBottom">@dimen/size_dp_16</item>
    </style>

    <style name="TextSettingsViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginStart">@dimen/size_dp_16</item>
        <item name="android:layout_marginTop">@dimen/size_dp_21</item>
        <item name="android:layout_marginBottom">@dimen/size_dp_21</item>
        <item name="android:textSize">@dimen/size_sp_16</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">@dimen/size_dp_48</item>
        <item name="android:layout_height">@dimen/size_dp_48</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ImageSettingViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">21dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/size_sp_26</item>
        <item name="cornerRadius">@dimen/size_dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_dp_10</item>
        <item name="iconTint">@color/black_text</item>
    </style>



</resources>