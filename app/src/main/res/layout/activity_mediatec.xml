<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.PlaylistMaker.Settings"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:padding="@dimen/size_dp_4"
        android:layout_marginBottom="@dimen/size_dp_24">

        <ImageView style="@style/ImageViewStyle"
            android:id="@+id/ameMediatec"
            android:src="@drawable/arrowback"
        />

        <TextView
            style="@style/TextViewStyle"
            android:text="@string/am_mediatec"
 />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size_dp_2">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigatin_view"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_dp_18"
            android:layout_marginEnd="@dimen/size_dp_18"
            app:menu="@menu/bottom_menu" />
    </LinearLayout>
</LinearLayout>