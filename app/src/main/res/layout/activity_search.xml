<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.PlaylistMaket.Settings"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_dp_4">

        <ImageView style="@style/ImageViewStyle"
            android:id="@+id/aseSearch"
            android:src="@drawable/arrowback"/>

           <TextView style="@style/TextViewStyle"
            android:text="@string/am_search"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_dp_4">

        <ImageView
            android:src="@drawable/field_search"
            android:id="@+id/search_Icon"
            android:layout_marginLeft="@dimen/size_dp_18"
            android:padding="7dp"
            android:layout_width="@dimen/size_dp_36"
            android:layout_height="@dimen/size_dp_36"
            android:background="@color/light_grey"/>

        <EditText
            android:id="@+id/enterEditText"
            android:text=""
            android:hint="Поиск"
            android:padding="@dimen/size_dp_4"
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dp_36"/>
    </LinearLayout>

</LinearLayout>