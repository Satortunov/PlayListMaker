<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutStyle"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:paddingBottom="24dp">

    <TextView style="@style/TextViewStyle"
            android:text="@string/app_name"
    />
    </FrameLayout>

    <Button style="@style/ButtonStyle"
        android:id="@+id/amSearch"
        android:text="@string/am_search"
        app:icon="@drawable/search" />

    <Button style="@style/ButtonStyle"
        android:id="@+id/amMediatec"
        android:text="@string/am_mediatec"
        app:icon="@drawable/mediatec" />

    <Button style="@style/ButtonStyle"
        android:id="@+id/amSettings"
        android:text="@string/am_settings"
        app:icon="@drawable/settings" />

</LinearLayout>

