<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="normal"
        android:paddingTop="4sp"
        android:paddingBottom="4sp"
        android:paddingLeft="4sp"
        android:paddingRight="52sp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/am_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/am_search"
        android:textAllCaps="false"
        android:textColor="@color/black_text"
        android:textSize="22sp"
        android:textStyle="normal"
        android:paddingHorizontal="16sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="8sp"
        app:iconTint="@color/black_text" />

    <Button
        android:id="@+id/am_mediatec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/am_mediatec"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/black_text"
        android:textAllCaps="false"
        android:paddingHorizontal="16sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/mediatec"
        app:iconGravity="textStart"
        app:iconPadding="8sp"
        app:iconTint="@color/black_text"/>

    <Button
        android:id="@+id/am_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:text="@string/am_settings"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/black_text"
        android:textAllCaps="false"
        android:paddingHorizontal="16sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="8sp"
        app:iconTint="@color/black_text"/>

</LinearLayout>

