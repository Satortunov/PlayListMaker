<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="holderButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/size_dp_54</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="Cover_Style">
        <item name="cornerRadius">@dimen/size_dp_2</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColorHint">@color/black_text</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="Track_Name_Style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Track_Another_Info_Style">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Стили для аудиоплеера -->

    <style name="APStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="APImageViewStyle" parent="@style/ImageViewStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="APCoverStyle" parent="@style/Cover_Style">
        <item name="android:background">@color/black</item>
    </style>

    <style name="APTrackNameStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_dp_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="APMusicianNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="APSoundTimeStyle" >
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="APHeaderStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="APInformationStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/black</item>
    </style>

</resources>